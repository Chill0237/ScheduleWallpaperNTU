{
  "manifest_version": 3,
  "name": "NTU課表轉桌布",
  "version": "1.1.0",
  "description": "一鍵將台大選課結果轉成美觀的手機桌布",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://course.ntu.edu.tw/result/*/table"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}